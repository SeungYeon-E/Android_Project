<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BuyActivity_s"
    android:padding="15dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy cart items!"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.3"
        android:padding="10dp"
        android:background="#129A9A9A"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="배달정보"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/buy_postNum_et_s"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="우편번호"
                android:enabled="false"
                android:textColor="@color/gray_600"
                />
            <Button
                android:id="@+id/buy_postNum_btn_s"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="우편번호 검색"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/buy_address1_et_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="주소"
            android:enabled="false"
            android:textColor="@color/gray_600"
            />
        <EditText
            android:id="@+id/buy_address2_et_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="상세 주소를 입력해주세요."
            android:singleLine="true"
            android:textColor="@color/gray_600"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.7"
        android:padding="10dp"
        android:background="#129A9A9A"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="요청사항"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/buy_Requests_et_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="요청사항을 입력해주세요."
            android:singleLine="true"
            android:textColor="@color/gray_600"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.1"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#129A9A9A"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="결제수단"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"

            />
        <RadioGroup
            android:id="@+id/buy_payment_rg_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/buy_card_rb_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카드결제"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/buy_noBankBook_rb_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="무통장입금"
                />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="주문금액"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/buy_priceResult_tv_s"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:text="11,900원"
                android:textSize="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="배달팁"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/buy_deliveryTip_tv_s"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:text="3,000원"
                android:textSize="15dp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="총 결제금액"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/buy_deliveryPrice_tv_s"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:text="11,900원"
                android:textSize="20dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/buy_deliveryOrder_btn_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_margin="10dp"
            android:text="결제하기"
            />

    </LinearLayout>

</LinearLayout>